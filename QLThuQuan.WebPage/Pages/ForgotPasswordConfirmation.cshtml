@page
@model QLThuQuan.WebPage.Pages.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Đã gửi email reset mật khẩu";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-sm p-4 text-center" style="max-width: 450px; width: 100%;">
        <h4 class="text-primary">@ViewData["Title"]</h4>
        <p class="mt-3">
            Nếu email tồn tại trong hệ thống,<br />
            chúng tôi đã gửi link đặt lại mật khẩu.
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
